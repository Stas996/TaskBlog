@model IEnumerable<TaskBlog.PresentationLayer.ViewModels.ArticleViewModel>
@{
    ViewBag.Title = "TaskBlog";
}

<h2 class="text-center">Популярные статьи</h2>
    @ArticleHelpers.ArticlesList(Model)
<hr />
@*@Html.Partial("_Form", new TaskBlog.PresentationLayer.ViewModels.ArticleViewModel())*@

@section scripts{
    <script>
        $('.bootstrap-tagsinput').tagsinput({
            confirmKeys: [13, 32, 44]
        });

        $('.bootstrap-tagsinput').on('keypress', function (e) {
            if (e.keyCode == 13) {
                e.keyCode = 44;
                e.preventDefault();
            };
        });
    </script>
}