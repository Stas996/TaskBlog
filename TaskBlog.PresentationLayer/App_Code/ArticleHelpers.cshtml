@using System.Web.Mvc.Html
@*хелпер для вывода статей*@
@helper ArticlesList(IEnumerable<TaskBlog.PresentationLayer.ViewModels.ArticleViewModel> articles)    
{
var Html = ((System.Web.Mvc.WebViewPage)WebPageContext.Current.Page).Html;
foreach (var a in articles)
{
        <div class="panel">
            <div class="panel-heading">
                <div>
                    <div class="row">
                        <div class="col-sm-9">
                            <h3 class="pull-left"> 
                                @Html.ActionLink(a.Name, "Show", "Article", new { id = a.Id }, null)
                            </h3>
                        </div>
                        <div class="col-sm-3">
                            <h4 class="pull-right">
                                <small><em>@a.DateTime</em></small>
                            </h4>
                        </div>
                    </div>
                </div>
            </div>

            <div class="panel-body">
                @a.ShortDescription ...
            </div>

            <div class="panel-footer">
                @Html.ActionLink("Подробнее", "Show", "Article", new { id = a.Id }, null)
                @if (User.IsInRole("admin"))
                {
                    <span>|</span>
                    @Html.ActionLink("Удалить", "Delete", "Article", new { id = a.Id }, null)
                }
            </div>
        </div>
}

}
